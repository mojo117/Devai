{
  "mcpServers": [
    {
      "name": "serena",
      "command": "/root/.local/bin/uvx",
      "args": ["--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--project", "/opt/Klyde/projects"],
      "requiresConfirmation": true,
      "toolPrefix": "serena",
      "enabledForAgents": ["chapo", "koda"]
    },
    {
      "name": "filesystem",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/opt/Klyde/projects"],
      "requiresConfirmation": true,
      "toolPrefix": "fs_mcp",
      "enabledForAgents": ["chapo", "koda", "devo"]
    },
    {
      "name": "github",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "requiresConfirmation": true,
      "toolPrefix": "github_mcp",
      "enabledForAgents": ["chapo", "koda"]
    }
  ]
}
