# ===========================================
# DevAI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001

# Auth (Supabase-backed admin login)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
DEVAI_JWT_SECRET=
JWT_EXPIRES_IN=24h

# LLM Provider API Keys (server-side only - NEVER expose to frontend!)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=

# Agent Router (feature flags)
USE_NEW_AGENT_ROUTER=false
# New router task executor budgets
NEW_AGENT_EXECUTOR_MAX_TURNS=20
NEW_AGENT_EXECUTOR_MAX_TURNS_ON_CONTINUE=40

# Web Search (Perplexity AI)
PERPLEXITY_API_KEY=

# GitHub Integration
GITHUB_TOKEN=
GITHUB_OWNER=
GITHUB_REPO=

# Project Configuration
# The root directory of the project to manage
PROJECT_ROOT=
# Additional allowed roots (optional). Separate multiple paths with ; or ,
ALLOWED_ROOTS=

# Skills Configuration
# Directory that contains skill manifests (default: ./skills)
SKILLS_DIR=

# Tool execution (milliseconds)
TOOL_TIMEOUT_MS=15000
TOOL_MAX_READ_BYTES=1048576
TOOL_MAX_WRITE_BYTES=262144
TOOL_MAX_LIST_ENTRIES=500
TOOL_MAX_DIFF_CHARS=12000
TOOL_ALLOWED_EXTENSIONS=.md,.txt,.json,.js,.ts,.tsx,.jsx,.css,.scss,.html,.yml,.yaml,.env,.example,.log

# Persistence (SQLite)
# Default: ./var/devai.db
DB_PATH=
